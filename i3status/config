general {
        output_format = "i3bar"
        colors = false
        markup = pango
        interval = 1
}

order += "wireless wlp59s0"
#order += "volume master"
order += "battery 0"
order += "tztime local"

battery 0 {
        format = "<span background='#d300c4' foreground='#261d45'> %status </span><span background='#261d45'> %percentage %emptytime </span>"
        status_full = "&#xf296;"
        status_chr = "&#xf294;"
        status_bat = "&#xf296;"
        status_unk = "&#xf294;"
        integer_battery_capacity = true
        separator = false
}

wireless wlp59s0 {
        format_up = "<span background='#d300c4' foreground='#261d45'> &#xf18a; </span><span background='#261d45'> %ip %essid %bitrate</span>"
        format_down = "<span background='#ff5555' foreground='#261d45'> &#xf166; </span><span background='#261d45'> Disconnected </span>"
        separator = false
}

volume master {
        format = "<span background='#d300c4' foreground='#261d45'> &#xf123; </span><span background='#261d45'> %volume </span>"
        format_muted = "<span background='#ff5555'> &#xf3a2; </span><span background='#261d45'> Muted </span>"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
        separator = false
}

tztime local {
		format = "<span background='#d300c4'  foreground='#261d45'> &#xf394; </span><span background='#261d45'> %time </span>"
		format_time = "%a %-d %b %H:%M"
}
