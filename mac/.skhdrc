##############################################
# Navigation (focussing)
##############################################

# Change focused window with shift+alt+hjkl (use space to toggle last window)
shift + alt - h : yabai -m window --focus west
shift + alt - j : yabai -m window --focus south
shift + alt - k : yabai -m window --focus north
shift + alt - l : yabai -m window --focus east

# Focus last used window
shift + alt - space  : yabai -m window --focus recent

# Fullscreen currently focussed window
shift + alt - f : yabai -m window --toggle zoom-fullscreen

# Balance windows in space
shift + alt - b : yabai -m space --balance

# Rotate layout by 90 degrees
shift + alt - r : yabai -m space --rotate 90

# Change space with alt+num
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5
alt - 6 : yabai -m space --focus 6
alt - 7 : yabai -m space --focus 7
alt - 8 : yabai -m space --focus 8

# Change monitor with ctrl+alt_+num
ctrl + alt - 1  : yabai -m display --focus 1
ctrl + alt - 2  : yabai -m display --focus 2

##############################################
# Movement
##############################################

# Move window inside layout with ctrl+alt+hjkl
ctrl + alt - h : yabai -m window --swap west
ctrl + alt - j : yabai -m window --swap south
ctrl + alt - k : yabai -m window --swap north
ctrl + alt - l : yabai -m window --swap east

# Move between workspaces
shift + alt + ctrl - h : yabai -m space --focus prev
shift + alt + ctrl - l : yabai -m space --focus next

# Send Window to Space and shift focus to space with shift+cmd+num
shift + cmd - 1 : yabai -m window --space  1; yabai -m space --focus 1
shift + cmd - 2 : yabai -m window --space  2; yabai -m space --focus 2
shift + cmd - 3 : yabai -m window --space  3; yabai -m space --focus 3
shift + cmd - 4 : yabai -m window --space  4; yabai -m space --focus 4
shift + cmd - 5 : yabai -m window --space  5; yabai -m space --focus 5
shift + cmd - 6 : yabai -m window --space  6; yabai -m space --focus 6
shift + cmd - 7 : yabai -m window --space  7; yabai -m space --focus 7
shift + cmd - 8 : yabai -m window --space  8; yabai -m space --focus 8

# Send Window to Monitor and shift focus with ctrl+cmd+num
ctrl + cmd - 1  : yabai -m window --display 1; yabai -m display --focus 1
ctrl + cmd - 2  : yabai -m window --display 2; yabai -m display --focus 2

##############################################
# Applications
##############################################

ctrl + alt - t : open -a /Applications/iTerm.app
ctrl + alt - c : open -a /Applications/Visual\ Studio\ Code.app
ctrl + alt - g : open -a /Applications/Firefox.app